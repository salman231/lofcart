<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <amnumber>
            <general>
                <enabled>0</enabled>
                <offset>0</offset>
            </general>

            <order>
                <format>ORD-{yy}-{mm}-{dd}-{counter}</format>
                <start>1</start>
                <pad>8</pad>
                <increment>1</increment>
                <reset>0</reset>
                <per_website>0</per_website>
                <per_store>0</per_store>
            </order>

            <invoice>
                <same>1</same>
                <prefix>INV-</prefix>

                <format>INV-{yy}-{mm}-{dd}-{counter}</format>
                <start>1</start>
                <pad>8</pad>
                <increment>1</increment>
                <reset>0</reset>
                <per_website>0</per_website>
                <per_store>0</per_store>
            </invoice>

            <shipment>
                <same>31</same>
                <prefix>SHI-</prefix>

                <format>SHI-{yy}-{mm}-{dd}-{counter}</format>
                <start>1</start>
                <pad>8</pad>
                <increment>1</increment>
                <reset>0</reset>
                <per_website>0</per_website>
                <per_store>0</per_store>
            </shipment>

            <creditmemo>
                <same>1</same>
                <prefix>MEMO-</prefix>

                <format>MEMO-{yy}-{mm}-{dd}-{counter}</format>
                <start>1</start>
                <pad>8</pad>
                <increment>1</increment>
                <reset>0</reset>
                <per_website>0</per_website>
                <per_store>0</per_store>
            </creditmemo>
        </amnumber>
    </default>
</config>
