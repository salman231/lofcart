<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Abzer_Core::config" title="Abzer" translate="title" sortOrder="10">
                                <resource id="Abzer_Core::smtp_config" title="SMTP" translate="title" sortOrder="10"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Reports::report">
                    <resource id="Magento_Reports::report_marketing">
                            <resource id="Abzertech_Smtp::email_log" title="Abzer SMTP Log"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
