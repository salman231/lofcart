<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <!-- Add new Tab -->
        <tab id="Annexcloud" translate="label" sortOrder="300">
            <label>Annexcloud</label>
        </tab>
        <section id="saadmin" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>General</label>
            <tab>Annexcloud</tab>
            <!-- resource tag name which we have to defined in the acl.xml -->
            <resource>Magento_Saadmin::config_saadmin</resource>
            <group id="sageneral" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Common Settings</label>
                <field id="siteid" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Site Id</label>
                </field>
            </group>
<group id="salogin" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Social Login Setting</label>
                <field id="secretkey" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Secret Key</label>
                    <validate>required-entry</validate>
                </field>
                <field id="tokenurl" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Access Token Url</label>
                    <validate>required-entry</validate>
                </field>
                <field id="userinfo" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Get user info Url</label>
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>
